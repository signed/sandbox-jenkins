pipeline {
    agent { docker { image 'primed_with_maven' } }

    options {
        disableConcurrentBuilds()
        timestamps()
    }

    stage {
        parallel {
            stage('one') {
                sh 'echo one'
            }
            stage('two') {
                sh 'echo two'
            }
        }
    }

    stages {
        stage('build') {
            steps {
                sh 'mvn --version'
            }
        }
        stage('test') {
            steps {
                sh 'cd jenkinsfile && mvn test'
                sh 'echo "output" > result.txt'
                archiveArtifacts artifacts: '*.txt', fingerprint: true
            }
            post {
                always {
                    junit '**/target/*-reports/TEST-*.xml'
                }

            }
        }
    }
}