#!groovy
def ticketKey

pipeline {
    agent none
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 120, unit: 'MINUTES')
    }
    environment {
        JIRA_SITE = 'banana'
    }
    stages {
        stage('Create Jira Ticket') {
            agent any
            steps {
                script {
                    def testIssue = [fields: [
                            project    : [key: 'FAN'],
                            issuetype  : [name: 'Task'],
                            summary    : 'Deploying to stage and live',
                            description: 'New JIRA Created from Jenkins.'
                    ]]
                    response = jiraNewIssue issue: testIssue
                    ticketKey = response.data.key
                }
                script {
                    def transitionInput =
                            [
                                    transition: [
                                            id   : '11', // start issue
                                            input: 'potato potato'
                                    ]
                            ]

                    jiraTransitionIssue idOrKey: ticketKey, input: transitionInput
                }

                script {
                    def transitions = jiraGetIssueTransitions idOrKey: ticketKey
                    echo transitions.data.toString()
                    def transitionid = transitions.data.transitions.find { it.name == 'Done' }.id

                    def transitionInput =
                            [
                                    transition: [
                                            id   : transitionid,
                                            input: 'potato potato'
                                    ]
                            ]

                    jiraTransitionIssue idOrKey: ticketKey, input: transitionInput
                }

            }
        }
    }
}
